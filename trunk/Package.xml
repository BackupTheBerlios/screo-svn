                        <file name="LibraryTest.php" />
                        <file name="ScriptTest.php" />
                        <dir name="Decorator">
                            <file name="AddFooterTest.php" />
                            <file name="AddHeaderTest.php" />
                            <file name="AddHeaderAndFooterTest.php" />
                            <file name="AllTests.php" />
                            <file name="PharizeTest.php" />
                        </dir>
                    </dir>
                </dir>
            </dir>
        </filelist>
    </release>
