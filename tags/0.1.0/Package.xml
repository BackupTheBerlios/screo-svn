                    	<replace from="@package_version@" to="version" type="package-info" />
                    </file><file name="Quiet.php" />
                    <file name="Route.php">
                    	<replace from="@package_version@" to="version" type="package-info" />
                    </file><file name="Route.php" />
                </dir>
                <file name="Type.php">
